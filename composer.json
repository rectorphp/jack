{
    "name": "rector/jack",
    "description": "Jack helps you incrementally update your `composer.json` dependencies, ensuring your project stays current without the chaos of outdated packages",
    "license": "MIT",
    "bin": [
        "bin/jack"
    ],
    "require": {
        "php": ">=8.2",
        "composer/semver": "^3.4",
        "illuminate/container": "^12.25",
        "nette/utils": "^4.0",
        "symfony/console": "^6.4.24",
        "symfony/finder": "^7.3",
        "symfony/process": "^7.3",
        "webmozart/assert": "^1.11"
    },
    "require-dev": {
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^11.5",
        "rector/rector": "^2.1",
        "shipmonk/composer-dependency-analyser": "^1.8",
        "phpecs/phpecs": "^2.1",
        "symplify/phpstan-extensions": "^12.0",
        "symplify/vendor-patches": "^11.5",
        "tomasvotruba/class-leak": "^2.0",
        "tracy/tracy": "^2.10"
    },
    "autoload": {
        "psr-4": {
            "Rector\\Jack\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rector\\Jack\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "platform-check": false,
        "allow-plugins": {
            "cweagans/composer-patches": true,
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "check-cs": "vendor/bin/ecs check --ansi",
        "fix-cs": "vendor/bin/ecs check --fix --ansi",
        "phpstan": "vendor/bin/phpstan analyse --ansi",
        "rector": "vendor/bin/rector process --ansi"
    }
}
